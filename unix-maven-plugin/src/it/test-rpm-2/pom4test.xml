<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.mojo.unix</groupId>
    <artifactId>unix</artifactId>
    <version>1.0-alpha-5-SNAPSHOT</version>
  </parent>
  <groupId>bar</groupId>
  <artifactId>project-rpm-2</artifactId>
  <version>1.1-2</version>
  <packaging>rpm</packaging>
  <licenses>
    <license>
      <name>BSD</name>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>org.jvnet.hudson.main</groupId>
      <artifactId>hudson-war</artifactId>
      <version>1.255</version>
      <type>war</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>unix-maven-plugin</artifactId>
        <version>testing</version>
        <extensions>true</extensions>
        <configuration>
          <contact>Trygve Laugstol</contact>
          <contactEmail>trygvis@codehaus.org</contactEmail>
          <defaults>
            <fileAttributes>
              <user>hudson</user>
              <group>hudson</group>
              <mode>0444</mode>
            </fileAttributes>
          </defaults>
          <rpm>
            <group>Application/Collectors</group>
          </rpm>
          <assembly>
            <extractArtifact>
              <artifact>org.jvnet.hudson.main:hudson-war:war</artifact>
              <to>/usr/share/hudson/lib</to>
              <includes>
                <!-- TODO: this should work without the leading stars -->
                <include>**/WEB-INF/slave.jar</include>
              </includes>
              <pattern>WEB-INF/(slave.jar)</pattern>
              <replacement>$1</replacement>
            </extractArtifact>
            <extractArtifact>
              <artifact>org.jvnet.hudson.main:hudson-war:war</artifact>
              <to>/usr/share/hudson/license</to>
              <includes>
                <!-- TODO: this should work without the leading stars -->
                <include>**/*-license.txt</include>
              </includes>
              <pattern>.*/(.*license.*)</pattern>
              <replacement>$1</replacement>
              <fileAttributes>
                <user>nobody</user>
                <group>nobody</group>
                <mode>0444</mode>
              </fileAttributes>
            </extractArtifact>
          </assembly>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
